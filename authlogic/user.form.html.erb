<% semantic_form_for(@user) do |f| %>
	<% f.inputs do %>
		<%= f.input :email %>
		<%= f.input :first_name %>
		<%= f.input :last_name %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<%= f.commit_button button_name %> or <%= link_to "Cancel", users_path %>
	<% end -%>
<% end %>