<%= link_to "Create New User", new_user_path %>
<table>
	<thead>
		<th colspan="3">Email Address</th>
	</thead>
	<tbody>
	<% if !@users.blank? %>
	  <% for user in @users %>
	    <tr>
	    	<td><%= link_to h(user.email), user %></td>
			<td><%= link_to "Edit", edit_user_path(user) %></td>
			<td><%= link_to "Delete", user, :confirm => 'Are you sure?', :method => :destroy %></td>
	    </tr>
	  <% end %>
	<% else %>
	  <tr><td>No data to display.</td></tr>
	<% end %>
	</tbody>
</table>